@model SysPet.Models.ProductosViewModel

@{
    ViewData["Title"] = "Create";
}



@try
{
    <div class="col-md-8 offset-2 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Agregar Artículo</h4>
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="d-g">
                        <div class="form-outline mb-4">
                            <label asp-for="Nombre" class="control-label col-md-6"></label>
                            <input asp-for="Nombre" class="form-control form-control-lg" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="Proveedor" class="control-label col-md-6"></label>
                            <input asp-for="Proveedor" class="form-control form-control-lg" />
                            <span asp-validation-for="Proveedor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-outline mb-4">
                        <label asp-for="Descripcion" class="control-label col-md-6"></label>
                        <input asp-for="Descripcion" class="form-control form-control-lg" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="d-g">
                        <div class="form-outline mb-4">
                            <label asp-for="Cantidad" class="control-label col-md-6"></label>
                            <input asp-for="Cantidad" class="form-control form-control-lg" />
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label asp-for="Stock" class="control-label col-md-6"></label>
                            <input asp-for="Stock" class="form-control form-control-lg" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-g">
                        <div class="form-outline mb-4">
                            <label asp-for="PrecioUnitario" class="control-label col-md-6"></label>
                            <input asp-for="PrecioUnitario" class="form-control form-control-lg" />
                            <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label asp-for="PrecioSugerido" class="control-label col-md-6"></label>
                            <input asp-for="PrecioSugerido" class="form-control form-control-lg" />
                            <span asp-validation-for="PrecioSugerido" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-g">
                        <div class="form-outline mb-4">
                            <label asp-for="FechaIngreso" class="control-label col-md-6"></label>
                            <input asp-for="FechaIngreso" class="form-control form-control-lg" />
                            <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="FechaVencimiento" class="control-label col-md-8"></label>
                            <input asp-for="FechaVencimiento" class="form-control form-control-lg" />
                            <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="d-flex justify-content-center mb-4" style="color: #0dcaf0;align-items: center;gap:8px;">

                        <label asp-for="Image" class="form-label text-white m-1 custom-file-label" style="color: #0dcaf0 !important;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
                                <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
                                <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z" />
                            </svg>
                        </label>
                        <input asp-for="Image" class="form-control" type="file" accept="image/*" />

                    </div>

                    <div class="form-outline mb-4 btn-groups">
                        <button type="submit" class="btn btn-outline-success btn-lg btn-block btn-custom-color-success btn-custom-f">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy" viewBox="0 0 16 16">
                                <path d="M11 2H9v3h2V2Z" />
                                <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0ZM1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5Zm3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4v4.5ZM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5V15Z" />
                            </svg>
                            Guardar
                        </button>
                        <a class="btn btn-outline-danger btn-lg btn-block btn-custom-color-delete btn-custom-f" href="@Url.Action("Index", "Product", new {})">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                            </svg>
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
catch (Exception ex)
{
    <p>Error: @ex.Message</p>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
