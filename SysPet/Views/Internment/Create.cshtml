@model SysPet.Models.InternamientosViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="col-md-6 offset-3 fw-normal mb-3 pb-3">Agregar Internamiento</h1>

<div class="row">
    <div class="col-md-6 offset-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-g">
                <div class="form-outline mb-4">
                    @Html.LabelFor(model => model.IdPaciente, "Paciente", new { @class = "control-label col-md-6" })
                    @Html.DropDownListFor(model => model.IdPaciente, Model.Pacientes,"Seleccionar un paciente", new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(model => model.IdPaciente)
                </div>
                <div class="form-outline mb-4">
                    @Html.LabelFor(model => model.IdPersona, "Propietario", new { @class = "control-label col-md-6" })
                    @Html.DropDownListFor(model => model.IdPersona, Model.Personas,"Seleccionar un propietario", new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(model => model.IdPersona)
                </div>

            </div>
            <div class="d-g">
                <div class="form-outline mb-4">
                    <label asp-for="FechaIngreso" class="control-label col-md-6"></label>
                    <input asp-for="FechaIngreso" class="form-control form-control-lg" />
                    <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                </div>
                <div class="form-outline mb-4">
                    <label asp-for="Medicamento" class="control-label col-md-6"></label>
                    <input asp-for="Medicamento" class="form-control form-control-lg" />
                    <span asp-validation-for="Medicamento" class="text-danger"></span>
                </div>
            </div>
            <div class="d-g">
                <div class="form-outline mb-4">
                    <label asp-for="Antecedentes" class="control-label col-md-6"></label>
                    <input asp-for="Antecedentes" class="form-control form-control-lg" />
                    <span asp-validation-for="Antecedentes" class="text-danger"></span>
                </div>
                <div class="form-outline mb-4">
                    <label asp-for="Tratamiento" class="control-label col-md-6"></label>
                    <input asp-for="Tratamiento" class="form-control form-control-lg" />
                    <span asp-validation-for="Tratamiento" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-outline mb-4">
                @Html.LabelFor(model => model.IdDoctor, "Doctor", new { @class = "control-label col-md-6" })
                @Html.DropDownListFor(model => model.IdDoctor, Model.Doctores,"Seleccionar un doctor", new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(model => model.IdDoctor)
            </div>

            <div class="mb-4 d-f-btn">
                <a class="btn btn-outline-info btn-custom-color-info btn-custom-f" href="@Url.Action("Create", "Person", new {})">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-suit-heart" viewBox="0 0 16 16">
                        <path d="m8 6.236-.894-1.789c-.222-.443-.607-1.08-1.152-1.595C5.418 2.345 4.776 2 4 2 2.324 2 1 3.326 1 4.92c0 1.211.554 2.066 1.868 3.37.337.334.721.695 1.146 1.093C5.122 10.423 6.5 11.717 8 13.447c1.5-1.73 2.878-3.024 3.986-4.064.425-.398.81-.76 1.146-1.093C14.446 6.986 15 6.131 15 4.92 15 3.326 13.676 2 12 2c-.777 0-1.418.345-1.954.852-.545.515-.93 1.152-1.152 1.595L8 6.236zm.392 8.292a.513.513 0 0 1-.784 0c-1.601-1.902-3.05-3.262-4.243-4.381C1.3 8.208 0 6.989 0 4.92 0 2.755 1.79 1 4 1c1.6 0 2.719 1.05 3.404 2.008.26.365.458.716.596.992a7.55 7.55 0 0 1 .596-.992C9.281 2.049 10.4 1 12 1c2.21 0 4 1.755 4 3.92 0 2.069-1.3 3.288-3.365 5.227-1.193 1.12-2.642 2.48-4.243 4.38z" />
                    </svg>
                    Nuevo Paciente
                </a>
                <a class="btn btn-outline-info btn-custom-color-info btn-custom-f" href="@Url.Action("Create", "Patient", new {})">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                    </svg>
                    Nuevo Propietario
                </a>
                <a class="btn btn-outline-info btn-custom-color-info btn-custom-f" href="@Url.Action("Create", "Doctor", new {})">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-hearts" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M11.5 1.246c.832-.855 2.913.642 0 2.566-2.913-1.924-.832-3.421 0-2.566ZM9 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm-9 8c0 1 1 1 1 1h10s1 0 1-1-1-4-6-4-6 3-6 4Zm13.5-8.09c1.387-1.425 4.855 1.07 0 4.277-4.854-3.207-1.387-5.702 0-4.276ZM15 2.165c.555-.57 1.942.428 0 1.711-1.942-1.283-.555-2.281 0-1.71Z" />
                    </svg>
                    Nuevo Doctor
                </a>
            </div>

            <div class="form-outline mb-4 btn-groups">
                <button type="submit" class="btn btn-outline-success btn-lg btn-block btn-custom-color-success btn-custom-f">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy" viewBox="0 0 16 16">
                        <path d="M11 2H9v3h2V2Z" />
                        <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0ZM1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5Zm3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4v4.5ZM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5V15Z" />
                    </svg>
                    Guardar
                </button>
                <a class="btn btn-outline-danger btn-lg btn-block btn-custom-color-delete btn-custom-f" href="@Url.Action("Index", "Internment", new {})">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                    </svg>
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
