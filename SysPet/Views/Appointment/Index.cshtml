@using Newtonsoft.Json;
@using SysPet.Extensions;
@model IEnumerable<SysPet.Models.CitasViewModel>

@{
    ViewData["Title"] = "Index";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script>
    toastr.options = {
        "closeButton": true,
        "debug": false,
        "newestOnTop": false,
        "progressBar": true,
        "positionClass": "toast-top-right",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "2000",
        "hideDuration": "3000",
        "timeOut": "5000",
        "extendedTimeOut": "1200",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    }
</script>

@{
    var toastrMessages = TempData.ContainsKey("ToastrMessages")
    ? JsonConvert.DeserializeObject<ToastrMessages>(TempData["ToastrMessages"].ToString())
    : new ToastrMessages();
    @foreach (var item in toastrMessages.ToastrList)
    {
        <script> toastr.success('@item.Message')</script>
        <script>
            toastr['@item.Type']('@item.Message', '@item.Title')
            
        </script>
    }
}

<div class="btn-head btn-lg btn-block btn-custom-color-primary" style="padding: 0.5rem 0;">
    <a class="btn btn-outline-primary btn-image" href="@Url.Action("Create", "Appointment", new {})">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square-fill" viewBox="0 0 16 16">
            <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0z"/>
        </svg>
        Nueva Cita
    </a>
</div>


@if (Model != null && Model.Any())
{
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Citas</h4>
                <div class="table-responsive">
                    <table class="table table-hover" id="appointment">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaCita)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Motivo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ApellidoPaterno)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ApellidoMaterno)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Estado)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaCita)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Motivo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApellidoPaterno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApellidoMaterno)
                                    </td>
                                    @if (item.Estado.Equals("Activa"))
                                    {
                                        <td>
                                            <span class="badge text-bg-success" style="font-size: 1em;">@Html.DisplayFor(model => item.Estado)</span>
                                        </td>
                                    }
                                    @if (item.Estado.Equals("Cancelada"))
                                    {
                                        <td>
                                            <span class="badge text-bg-danger" style="font-size: 1em;">@Html.DisplayFor(model => item.Estado)</span>
                                        </td>
                                    }
                                    @if (item.Estado.Equals("Reagendada"))
                                    {
                                        <td>
                                            <span class="badge text-bg-info" style="font-size: 1em;">@Html.DisplayFor(model => item.Estado)</span>
                                        </td>
                                    }
                                    @if (item.Estado.Equals("Vencida"))
                                    {
                                        <td>
                                            <span class="badge text-bg-danger" style="font-size: 1em;">@Html.DisplayFor(model => item.Estado)</span>
                                        </td>
                                    }
                                    <td>
                                        <a class="btn btn-outline-primary custom-tooltip btn-custom-color-primary" href="@Url.Action("Edit", "Appointment", new { id = item.Id })">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                            </svg>
                                            <span class="custom-tooltip-text">Editar</span>
                                        </a>

                                        <a class="btn btn btn-outline-info custom-tooltip btn-custom-color-info" data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#detailModal-@item.Id">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-view-list" viewBox="0 0 16 16">
                                                <path d="M3 4.5h10a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1H3zM1 2a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13A.5.5 0 0 1 1 2zm0 12a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13A.5.5 0 0 1 1 14z" />
                                            </svg>
                                            <span class="custom-tooltip-text-detail">Detalle</span>
                                        </a>

                                        <a class="btn btn-outline-danger custom-tooltip btn-custom-color-delete" href="@Url.Action("Delete", "Appointment", new { id = item.Id })" data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                            </svg>
                                            <span class="custom-tooltip-text-delete">Eliminar</span>
                                        </a>
                                    </td>
                                </tr>

                                await Html.RenderPartialAsync("_ModalDetail", item);
                                await Html.RenderPartialAsync("Delete", item);
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

}
else
{
    await Html.RenderPartialAsync("EmptyData", new { Url = ViewBag.Url });
}

@section Scripts{
    <script>
        $(document).ready(function () {
            new DataTable('#appointment', {
                lengthMenu: [
                    [5, 10, 20, 50, -1],
                    [5, 10, 20, 50, 'Todos']
                ],
                language: {
                    decimal: '.',
                    thousands: ',',
                    url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json'
                }
            });
        })
    </script>
}